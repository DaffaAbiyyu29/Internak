<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Login2Fragment">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_left"
        android:layout_toLeftOf="@id/logoText"
        android:gravity="center"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/logoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="34sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/white"/>

    <!-- White Rounded Background -->
    <RelativeLayout
        android:id="@+id/whiteBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_background"
        android:padding="16dp">


        <TextView
            android:id="@+id/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Masuk"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TitleText"
            android:gravity="center"
            android:text="Harap masuk untuk melanjutkan"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editEmailAddress"
            android:layout_width="330dp"
            android:layout_height="50dp"

            android:layout_below="@id/subText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_outline_green"
            android:ems="15"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/editEmailAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_outline_green"
            android:inputType="textPassword"
            android:hint="Kata Sandi"
            android:ems="15"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"/>

        <!-- Button: Masuk -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_backround"
            android:layout_below="@id/editPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Masuk"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <!-- Footer Text -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="@string/rememberPw"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>
</RelativeLayout>
