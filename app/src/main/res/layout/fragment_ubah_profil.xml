<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.profile.UbahProfilFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/white">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Ubah Profil"
                    android:textSize="15sp"
                    android:textColor="@color/blue_sea"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="30dp"
                    android:text="Nama"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="left|right"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Edwin Julianto"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="left|right"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="edwinjuly0@gmail.com"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:text="Phone Number"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="left|right"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="081367071865"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Hapus akun"
                    android:background="@drawable/button_outline" />

            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primary">

        <ImageView
            android:id="@+id/button_back_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:src="@drawable/ic_left_arrow"
            android:tooltipText="Back To Dashboard"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ubah Profil"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />


    </com.google.android.material.card.MaterialCardView>



    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>