<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_cage"
    android:layout_width="345dp"
    android:layout_height="165dp"
    android:background="@drawable/cage_card"
    app:cardBackgroundColor="@color/primary"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:cardCornerRadius="15dp"
    android:layout_gravity="top|center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/primary">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:background="@drawable/cage_card"
        />

    <TextView
        android:id="@+id/text_card_cage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#F5F5F5"
        android:textSize="16sp"
        android:text="HARVEST MOON"
        android:textStyle="bold"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/text_card_cage_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:textColor="#C2D1C6"
        android:textSize="12sp"
        android:text="1 April 2024"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/text_card_cage_locate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:textColor="#C2D1C6"
        android:textSize="12sp"
        android:text="Bandung"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/text_card_cage_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/gold2"
        android:textSize="12sp"
        android:text="200 Ekor"
        android:textStyle="bold"
        android:textAlignment="viewStart" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/button_subcard_cage_temperature"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/gold1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/gold1">

        <TextView
            android:id="@+id/text_subcard_cage_title_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="top|center"
            android:textColor="@color/gold3"
            android:textSize="14sp"
            android:text="Suhu"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_subcard_cage_value_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="bottom|center"
            android:textColor="@color/brown1"
            android:textSize="14sp"
            android:text="25Â°C" />

        <ImageButton
            android:id="@+id/button_subcard_cage_temperature2"
            android:layout_width="25dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:background="@color/gold2"
            android:clickable="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_right_arrow"
            app:cardCornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/gold2"
            app:tint="@color/white"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/button_subcard_cage_amonia"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/gold1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/gold1">

        <TextView
            android:id="@+id/text_subcard_cage_title_amonia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="top|center"
            android:textColor="@color/gold3"
            android:textSize="14sp"
            android:text="Amonia"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_subcard_cage_value_amonia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="bottom|center"
            android:textColor="@color/brown1"
            android:textSize="14sp"
            android:text="20 ppm" />

        <ImageButton
            android:id="@+id/button_subcard_cage_amonia2"
            android:layout_width="25dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:background="@color/gold2"
            android:clickable="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_right_arrow"
            app:cardCornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/gold2"
            app:tint="@color/white"
            />

    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.card.MaterialCardView>